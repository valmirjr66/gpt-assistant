// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  system
  user
  assistant
  tool
}

model Messages {
  id             String @id @default(uuid()) @map("_id")
  content        String?
  role           Role
  conversationId String
  toolCall       ToolCall?
}

type ToolCall {
  id                String
  functionName      String
  functionArguments String
}
