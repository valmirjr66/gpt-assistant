// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  system
  user
  assistant
  tool
}

enum ActionType {
  positive
  negative
}

type ToolCall {
  id                String
  functionName      String
  functionArguments String
}

type Action {
  type             ActionType
  feedbackResponse String
  chosen           Boolean
}

model Messages {
  id             String    @id @default(uuid()) @map("_id")
  content        String?
  role           Role
  conversationId String
  toolCall       ToolCall?
  actions        Action[]
  annotations    String?
  createdAt      DateTime
}

model Conversation {
  id               String   @id @map("_id")
  userId           String
  threadId         String?
  title            String
  referenceFileIds String[]
  createdAt        DateTime
  archived         Boolean  @default(false)
}

model FileMetadata {
  id              String  @id @map("_id")
  fileId          String?
  downloadURL     String?
  displayName     String?
  previewImageURL String?
}

model References {
  id             String @id @map("_id")
  conversationId String
  fileMetadataId String
}
