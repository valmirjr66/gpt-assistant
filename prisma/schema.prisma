// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  system
  user
  assistant
  tool
}

enum ActionType {
  positive
  negative
}

type ToolCall {
  id                String
  functionName      String
  functionArguments String
}

type Action {
  type             ActionType
  feedbackResponse String
  chosen           Boolean
}

model Messages {
  id             String    @id @default(uuid()) @map("_id")
  content        String?
  role           Role
  conversationId String
  toolCall       ToolCall?
  actions        Action[]
  annotations    String?
}

model Conversation {
  id       String  @id @map("_id")
  threadId String?
}

model FileReference {
  fileId      String @id @map("_id")
  downloadURL String
}
